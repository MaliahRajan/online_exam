<div layout="column">
  <div layout="row" layout-wrap>
    <div flex="100">
      <md-card class="custom-margin">
        <md-content class="md-padding">
          <div layout="row" layout-wrap>
            <div flex="20" class="custom-margin-left-30px">
                 <md-whiteframe class="md-whiteframe-8dp"  layout layout-align="center center">
                    <span class="indexNavigate"><i class="fa fa-file-text"></i></span>
                    <md-button class="indexNavigateText md-raised" ng-click="instruction()">Instructions</md-button>
                 </md-whiteframe>
            </div>
           <div flex="5"></div>
            <div flex="20">
                 <md-whiteframe class="md-whiteframe-8dp"  layout layout-align="center center">
                   <span class="indexNavigate"><i class="fa fa-pencil"></i></span>
                   <md-button class="indexNavigateText md-raised" ng-click="practice()">Practice Test</md-button>
                 </md-whiteframe>
            </div>
            <div flex="5"></div>
            <div flex="20">
                 <md-whiteframe class="md-whiteframe-8dp"  layout layout-align="center center">
                    <span class="indexNavigate"><i class="fa fa-tasks"></i></span>
                    <md-button class="indexNavigateText md-raised">Take Test</md-button>
                 </md-whiteframe>
            </div>
            <div flex="5"></div>
            <div flex="20">
                 <md-whiteframe class="md-whiteframe-8dp"  layout layout-align="center center">
                    <span class="indexNavigate"><i class="fa fa-play-circle-o"></i></span>
                    <md-button class="indexNavigateText md-raised">Resume Test</md-button>
                 </md-whiteframe>
            </div>
          </div>
        </md-content>
      </md-card>
    </div>
  </div>
</div>